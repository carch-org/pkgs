optdepends=(
    'bash-completion: for Bash completion support'
    'zsh: for Zsh completion support'
    'fish: for Fish completion support'
    'ttf-nerd-fonts-symbols: symbols and icons'
    'ttf-jetbrains-mono: fonts'
    'ttf-jetbrains-mono-nerd: fonts'
